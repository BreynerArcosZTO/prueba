{{ 'section.custom-slide.css'| asset_url | stylesheet_tag }}

<div class="swiper" id="mainSwiper">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <article class="slide-content"> 
          <h2>{{ block.settings.slide_text }}</h2>
          <a href="{{ block.settings.slide_url }}"> {{ block.settings.slide_link }} </a>
        </article>
        <img src="{{ block.settings.slide_image | image_url: width: 1500 }}" 
          alt="{{ block.settings.slide_text | escape }}"
        >
      </div>
    {% endfor %}
  </div>

  <div class="swiper-pagination"></div>
  <div class="swiper-button-prev" aria-label="Previous slide"></div>
  <div class="swiper-button-next" aria-label="Next slide"></div>
</div>

<script>
  new Swiper('#mainSwiper', {
    direction: 'horizontal',
    loop: true,
    slidesPerView: 1,
    pagination: {
      el: '#mainSwiper .swiper-pagination',
      clickable: true
    },
    navigation: {
      nextEl: '#mainSwiper .swiper-button-next',
      prevEl: '#mainSwiper .swiper-button-prev'
    }
  });
</script>

{% schema %}
{
  "name": "Custom slider - banner",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "esto es label",
      "default": "Welcome to our store",
      "info": "tienda producto",
      "placeholder": "esto es placeholder"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
    "type":"slide",
    "name": "Slide",
    "settings": [
      {
        "type": "text",
        "id": "slide_text",
        "label": "Titulo para el slide"
      },
      {
        "type": "image_picker",
        "id": "slide_image",
        "label": "Seleccionar imagen"
      },
      {
        "type": "text",
        "id": "slide_link",
        "label": "Agregar link",
        "default": "Ver mas"
      },
      {
        "type": "url",
        "id": "slide_url",
        "label": "URL del link"
      }
    ] 
  }
  ]
}
{% endschema %}